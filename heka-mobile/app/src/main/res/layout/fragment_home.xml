<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.bounswe.heka.home.HomeViewModel" />
        <variable
            name="adapter"
            type="com.bounswe.heka.timeline.TimeLineAdapter" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AADDE2">

    <LinearLayout
        android:id="@+id/home_text_view"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FFBBF5"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent" >
        <EditText
            android:id="@+id/home_search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:hint="Search"
            android:inputType="text"
            />
        <View
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="6"></View>
        <Button
            android:id="@+id/home_create_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:text="Create"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/home_text_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:listitem="@layout/timeline_item"
        android:adapter="@{adapter}"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>